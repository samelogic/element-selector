{
  "manifest_version": 3,
  "name": "CSS Path Selector",
  "version": "0.1",
  "description": "Get CSS Path of any element.",
  "permissions": ["activeTab", "clipboardWrite"],

  "action": {
    "default_popup": "popup.html",
    "default_title": "CSS Path Selector from Samelogic",
    "default_icon": "icon.png",
    "default_width": 200
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
