{
  "manifest_version": 3,
  "name": "Copy CSS Selector",
  "version": "1.3.4",
  "description": "The CSS Path Selector is a tool to locate web elements easily. Useful for designers, developers, and researchers in web projects.",

  "permissions": ["activeTab", "scripting", "clipboardWrite"],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Copy CSS Selector by Samelogic",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
